<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/selectedItemImageView"
            android:layout_width="340dp"
            android:layout_height="340dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:gravity="left"
            android:layout_marginTop="40dp"
            android:text="Shop"
            android:textColor="#D0D0D0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/shopNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="25sp"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/locationTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40sp"
            android:gravity="left"
            android:text="Location"
            android:textColor="#D0D0D0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/locationTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="25sp"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/detailedLocationTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40sp"
            android:gravity="left"
            android:text="Detailed Location"
            android:textColor="#D0D0D0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/detailedLocationTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="25sp"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/uploadDateTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40sp"
            android:gravity="left"
            android:text="Upload date"
            android:textColor="#D0D0D0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/uploadDateTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="25sp"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/descriptionTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="60dp"
            android:textSize="25sp"
            android:textColor="@color/colorBlack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="right|center"
            android:paddingRight="40dp">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="80dp"
                android:progressDrawable="@drawable/circular_progress_view" />

            <ImageButton
                android:id="@+id/likeBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/like_icon" />

            <TextView
                android:id="@+id/likeNumTxt"
                android:layout_width="wrap_content"
                android:text="1"
                android:textSize="40sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/shareBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/share_icon" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
