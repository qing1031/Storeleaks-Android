<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/selectedItemImageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:background="@drawable/twitter_icon" />

    <TextView
        android:id="@+id/nameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="kids pajamas"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="left"
        android:layout_marginTop="10dp"
        android:text="Shop"
        android:textColor="#D0D0D0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/shopNameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Pujiang Tianjie"
        android:textColor="@color/colorBlack" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20sp"
        android:gravity="left"
        android:text="Location"
        android:textColor="#D0D0D0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/locationTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Dragon Mart 2 - international city international city international city international"
        android:textColor="@color/colorBlack" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20sp"
        android:gravity="left"
        android:text="Description"
        android:textColor="#D0D0D0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/descriptionTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="kids pajamas, pjs"
        android:textColor="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="right|center"
        android:paddingRight="20dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:progressDrawable="@drawable/circular_progress_view" />

        <ImageButton
            android:id="@+id/likeBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/like_icon" />

        <TextView
            android:id="@+id/likeNumTxt"
            android:layout_width="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/shareBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/share_icon" />
    </LinearLayout>
</LinearLayout>